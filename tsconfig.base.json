{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@earthquake/db": ["packages/db/src/index.ts"],
      "@earthquake/graphql": ["packages/graphql/src/index.ts"],
      "@earthquake/types": ["packages/types/src/index.ts"],
      "@earthquake/ui": ["packages/ui/src/index.ts"],
      "@earthquake/ui/schemas": ["packages/ui/src/schemas.ts"],
      "@earthquake/ui/*": ["packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
